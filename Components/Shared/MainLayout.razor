@inherits LayoutComponentBase
@inject ILoginStatus status

<div class="page">
    <AuthorizeView Roles="Administrator">
        <div class="sidebar">
            <NavMenu/>
        </div>
    </AuthorizeView>

    <main>
        <div class="top-row px-4">
            <DynamicComponent type="@status.GetType()"></DynamicComponent>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
